.send {
  height: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 7;
}
.show {
  display: block;
}
.hide {
  display: none;
}
.buy_box {
  height: 216rpx;
  display: flex;
  align-items: center;
}
.buy {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  z-index: 8;
  border-radius: 20rpx 20rpx 0 0;
}
.pad {
  padding: 46rpx 35rpx 0rpx 35rpx ;
}
.img4 {
  width: 226rpx;
  height: 226rpx;
  margin-right: 32rpx;
  border-radius: 15rpx;
}
.money {
  font-size: 36rpx;
  line-height: 56rpx;
  font-weight: 600;
  color: rgb(54, 54, 54);
}
.money text {
  font-size: 40rpx;
  color: rgb(218, 70, 91);
}
.save {
  line-height: 40rpx;
  font-size: 28rpx;
  color: rgb(149, 149, 149);
  margin-bottom: 30rpx;
}
.type {
  font-size: 24rpx;
  color: rgb(70, 70, 70);
}
.error {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 50%;
  border: 1rpx solid rgb(166, 166, 166);
  color: rgb(166, 166, 166);
  position: absolute;
  top: 20rpx;
  right: 35rpx;
}
.color_box {
  margin-top: 26rpx;
  
}
.select {
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 32rpx;
  border-bottom: 1rpx solid rgb(239, 239, 239);
}
.color {
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: rgb(70, 70, 70);
}
.active, .normal {
  font-size: 24rpx;
  /* width: 176rpx; */
  padding: 0 6rpx;
  height: 48rpx;
  line-height: 48rpx;
  border: 5rpx;
  text-align: center;
  margin-right: 20rpx;
  margin-top: 4rpx;
  border-radius: 10rpx;
}
.normal {
  border: 1rpx solid rgb(235, 235, 235);
  color: rgb(167, 167, 167);
}
.active {
  border: 1rpx solid rgb(218, 70, 91);
  color: rgb(218, 70, 91);
}
.shop_detail {
  height: 48rpx;
  font-size: 28rpx;
  color: rgb(70, 70, 70);
  display: flex;
  justify-content: space-between;
  margin: 26rpx 0 26rpx 0;
}
.shop_detail view {
  display: flex;
}
.nor,.disabled, .count_shu {
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  margin: 0;
  padding: 0;
  color: rgb(106, 106, 106);
}
.disabled {
  color: #ccc;
}

.count_shu {
  display: flex;
  justify-content: center;
  background: rgb(248, 248, 248);
  margin: 0 8rpx;
}
.bottom {
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  color: #fff;
  background: rgb(235, 97, 83);
}